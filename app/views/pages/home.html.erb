        <h1>Does this really useful thing</h1>
      </div>
      <!-- <%= Settings.client_url %> -->
      <div class="mdl-cell mdl-cell--12-col">
        <div class="home__checkforproblems__enterwebsite">
          <div class="mdl-textfield mdl-js-textfield">
